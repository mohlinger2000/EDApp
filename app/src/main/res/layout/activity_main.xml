<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="102dp"
            android:layout_height="56dp"
            android:text="Meals"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/lunch"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.037" />

    <Button
            android:id="@+id/breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:text="Breakfast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/sn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="200dp"
            android:text="Snack 1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/sn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Snack 2"
            app:layout_constraintEnd_toStartOf="@+id/sn3"
            app:layout_constraintStart_toEndOf="@+id/sn1"
            app:layout_constraintTop_toTopOf="@+id/textView" />

    <Button
            android:id="@+id/sn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="Snack 3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Lunch"
            app:layout_constraintEnd_toStartOf="@+id/dinner"
            app:layout_constraintStart_toEndOf="@+id/breakfast"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="Dinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/water"
            android:layout_width="204dp"
            android:layout_height="70dp"
            android:layout_marginTop="80dp"
            android:text="Track Water"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sn2" />

    <Button
            android:id="@+id/setAlarm"
            android:layout_width="204dp"
            android:layout_height="70dp"
            android:text="Set Alarm"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/water" />

    <Button
            android:id="@+id/calendar"
            android:layout_width="138dp"
            android:layout_height="49dp"
            android:text="Calendar"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/meals"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/meals"
            android:layout_width="132dp"
            android:layout_height="52dp"
            android:text="Meals"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chat"
            app:layout_constraintStart_toEndOf="@+id/calendar" />

    <Button
            android:id="@+id/chat"
            android:layout_width="132dp"
            android:layout_height="52dp"
            android:text="Chat"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/meals" />

</androidx.constraintlayout.widget.ConstraintLayout>